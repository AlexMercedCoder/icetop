{
  "name": "icetop",
  "version": "0.1.4",
  "author": {
    "name": "Alex Merced",
    "email": "alex@alexmerced.com"
  },
  "description": "Desktop UI for querying and monitoring Apache Iceberg catalogs via IceFrame",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:dev": "vite build && electron .",
    "package": "electron-builder"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zustand": "^5.0.0",
    "@monaco-editor/react": "^4.7.0",
    "marked": "^15.0.0",
    "highlight.js": "^11.10.0",
    "lucide-react": "^0.468.0",
    "uuid": "^11.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/uuid": "^10.0.0",
    "typescript": "^5.7.0",
    "vite": "^6.1.0",
    "@vitejs/plugin-react": "^4.3.0",
    "sass": "^1.83.0",
    "electron": "^34.0.0",
    "electron-builder": "^25.1.0",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.0"
  },
  "build": {
    "appId": "com.icetop.app",
    "productName": "IceTop",
    "icon": "build/icon.png",
    "directories": {
      "output": "out"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "extraResources": [
      {
        "from": "backend-dist",
        "to": "backend-dist",
        "filter": ["**/*"]
      }
    ],
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "build/icon.png",
      "category": "Development"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "build/icon.icns"
    },
    "win": {
      "target": ["nsis"],
      "icon": "build/icon.ico"
    }
  }
}
